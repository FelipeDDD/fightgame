{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static-build" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*\\.(json|xml))", "dest": "/$1" },
    { "src": "/images/(.*)", "dest": "/public/images/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}